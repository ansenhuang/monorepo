{
  "name": "monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples"
  ],
  "scripts": {
    "start:dev": "lerna run dev --parallel",
    "start:npm": "npx verdaccio",
    "build": "lerna run build --parallel",
    "release": "yarn build && lerna publish",
    "release:local": "yarn build && lerna publish --no-git-tag-version --no-push --registry=\"http://localhost:4873/\"",
    "lint": "eslint \"./**/*.{ts,tsx}\" --cache --cache-location .cache/ --report-unused-disable-directives --ext .ts,.tsx",
    "stylelint": "stylelint \"./**/*.{ts,tsx}\"",
    "prettier": "prettier --write \"./**/*.{js,ts,tsx}\"",
    "prettier:check": "prettier --check \"./**/*.{.js,ts,tsx}\""
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.1",
    "@babel/plugin-transform-react-constant-elements": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@rollup/plugin-replace": "^2.3.1",
    "@types/node": "^12.0.0",
    "@types/react": "^16.8.6 || ^17.0.0",
    "@types/react-dom": "^16.8.6 || ^17.0.0",
    "@types/styled-components": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "babel-plugin-macros": "^3.0.0",
    "babel-plugin-optimize-clsx": "^2.3.0",
    "cross-env": "^7.0.0",
    "eslint": "^7.4.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.7",
    "fast-glob": "^3.2.4",
    "husky": "^3.1.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.1",
    "react": "^16.8.0 || ^17.0.0",
    "react-dom": "^16.8.0 || ^17.0.0",
    "react-is": "^16.8.0 || ^17.0.0",
    "rimraf": "^3.0.0",
    "rollup": "^2.10.8",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.0",
    "styled-components": "^5.0.0",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-processor-styled-components": "^1.10.0",
    "typescript": "^4.1.0",
    "yargs": "^16.0.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
