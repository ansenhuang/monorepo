{
  "name": "monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn start-web",
    "start-web": "node scripts/start.js",
    "start-storybook": "start-storybook -p 6006 -s public",
    "start-npm": "npx verdaccio",
    "build": "yarn clean && yarn build:types && yarn build:esm && yarn build:cjs && yarn build:umd",
    "build:types": "lerna run build:types --scope \"@axe/*\" --stream --sort --no-bail",
    "build:esm": "lerna run build:esm --scope \"@axe/*\" --parallel",
    "build:cjs": "lerna run build:cjs --scope \"@axe/*\" --parallel",
    "build:umd": "lerna run build:umd --scope \"@axe/*\" --stream --sort --no-bail",
    "build-web": "yarn build:types && yarn build:esm && node scripts/build.js",
    "build-storybook": "build-storybook -s public",
    "clean": "lerna run clean --scope \"@axe/*\" --parallel",
    "pub": "lerna publish",
    "pub-local": "lerna publish --no-git-tag-version --no-push --registry=\"http://localhost:4873/\"",
    "release": "yarn lint && yarn build && yarn pub",
    "release-local": "yarn lint && yarn build && yarn pub-local",
    "test": "node scripts/test.js",
    "lint": "yarn prettier && yarn eslint && yarn stylelint",
    "eslint": "eslint \"**/*.{ts,tsx}\" --cache --report-unused-disable-directives --ext .ts,.tsx",
    "stylelint": "stylelint \"**/*.{ts,tsx}\" --cache",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css,json,md}\"",
    "prettier-check": "prettier --check \"**/*.{js,jsx,ts,tsx,css,json,md}\""
  },
  "dependencies": {
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
